{
  "name": "@eth-optimism/Waffle-ERC20-Example",
  "version": "1.0.0-alpha.1",
  "description": "Basic example of how to run integrations tests for a basic token contract with Waffle in the OVM",
  "scripts": {
    "clean": "rimraf build",
    "build:evm": "mkdir -p build && waffle waffle-config.json",
    "test:evm": "yarn build:evm && MODE=EVM mocha 'test/*.spec.js' --timeout 10000",
    "all:evm": "yarn clean && yarn test:evm",
    "build:ovm": "mkdir -p build && DEBUG=info*,error*,warn* waffle waffle-ovm-config.json",
    "test:ovm": "yarn build:ovm && MODE=OVM DEBUG=info*,warn* mocha 'test/*.spec.js' --timeout 50000",
    "all:ovm": "yarn clean && yarn test:ovm"
  },
  "keywords": [
    "optimism",
    "rollup",
    "optimistic",
    "ethereum",
    "virtual",
    "machine",
    "OVM",
    "ERC20",
    "waffle"
  ],
  "homepage": "https://github.com/ethereum-optimism/Waffle-ERC20-Example#readme",
  "license": "MIT",
  "author": "Optimism PBC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-optimism/Waffle-ERC20-Example.git"
  },
  "devDependencies": {
    "@eth-optimism/solc": "^0.7.6-alpha.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "5.2.7",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "solc": "0.7.6",
    "ts-node": "9.1.1",
    "typescript": "3.4.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
